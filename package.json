    "@types/webpack-dev-server": "4.7.2",
    "@vitest/ui": "4.0.18",
    "copy-webpack-plugin": "13.0.1",
    "css-loader": "7.1.3",
    "eslint": "9.39.2",
    "html-webpack-plugin": "5.6.6",
    "http-server": "14.1.1",
    "jsdom": "28.0.0",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.55.0",
    "vitest": "4.0.18",
    "webpack": "5.105.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.3"
