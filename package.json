    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "report": "playwright show-report",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "keywords": [
    "a4",
    "poster"
  ],
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@playwright/test": "1.58.2",
    "@types/node": "24.10.12",
