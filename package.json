{
  "name": "poster",
  "version": "1.0.0",
  "description": "A4 landscape page poster project with TypeScript and CSS",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development webpack serve",
    "build": "NODE_ENV=production webpack build",
    "preview": "npm run build && http-server dist --gzip",
